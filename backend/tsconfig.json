{
	"compilerOptions": {
		"target": "ES2020",

		"moduleResolution": "node16",
		"module": "Node16",
		"outDir": "dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
